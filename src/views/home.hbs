<div class="container text-center">
  <div class="row">
    {{#if posts}}
      {{#each posts}}
        <div class="col col-lg-4 col-mb-6 col-md-auto my-4 justify-content-center d-flex">
          <div class="card" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title">{{this.title}}</h5>
              <p class="card-text">{{this.content}}</p>
            </div>
          </div>
        </div>
      {{/each}}
    {{else}}
      <div>Yout don't have posts</div>
    {{/if}}
  </div>
</div>